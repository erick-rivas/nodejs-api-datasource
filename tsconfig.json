{
	"compilerOptions": {
		"lib": [
			"es5",
			"es6",
			"dom"
		],
		"rootDir": "./",
		"outDir": "./dist",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@lt/*": [
				"src/*"
			],
			"@support/*": [
				"src/support/*"
			],
			"@util/*": [
				"src/util/*"
			]
		}
	},
	"exclude": [
		"./node_modules",
		"./docs",
		"./assets"
	]
}